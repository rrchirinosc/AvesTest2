@{
    ViewData["Title"] = "Show";
}

@model BirdImagesViewModel

<h1>Show</h1>

<div id="birdShow" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
        @{
            bool first = true;
            var index = 0;
            foreach (var image in Model.Birds)
            {
                if (first)
                {
                    <div class="carousel-item active" data-slide-to="0">
                        <img src="@image.FileName" class="d-block w-100" @image
                             data-name="@image.Name (@image.SciName)" data-index=@index alt="@image.Name">
                    </div>
                            first = false;
                        }
                        else
                        {
                    <div class="carousel-item">
                        <img src="@image.FileName" class="d-block w-100"
                             data-name="@image.Name (@image.SciName)" data-index=@index alt="@image.Name">
                    </div>
                }
                index++;
            }
        }
    </div>
    <a class="carousel-control-prev" href="#birdShow" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#birdShow" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <button class="btn btn-outline-primary button-mod2 float-left" id="showInfo" type="button"
            data-toggle="collapse" data-target="#birdInfo" aria-expanded="false" aria-controls="birdInfo">
        <i class="fa fa-info"></i>
    </button>
    <div class="collapse" id="birdInfo">
        <div class="d-flex">
            <div class="card card-body">
                <span id="bird-name"></span>
                <span id="bird-location"></span>
                <span id="bird-date-taken"></span>
            </div>
