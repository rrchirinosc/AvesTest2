@{
    ViewData["Title"] = "Show";
}

@model BirdImagesViewModel

<h1>Show</h1>

<div id="birdShow" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
        @{
            bool first = true;
            foreach (var image in Model.Birds)
            {
                if (first)
                {
                    <div class="carousel-item active">
                        <img src="@image.FileName" class="d-block w-100" alt="@image.Name (@image.SciName)">
                    </div>
                    first = false;
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@image.FileName" class="d-block w-100" alt="@image.Name (@image.SciName)">
                    </div>
                }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#birdShow" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#birdShow" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <button class="btn btn-outline-primary button-mod2 float-left" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa fa-info"></i>
    </button>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <span id="bird-name"></span>@*Name (SciName)*@
            Location
            Month/Year
        </div>
    </div>
</div>