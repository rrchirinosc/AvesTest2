@inject Microsoft.Extensions.Options.IOptions<ApplicationOptions> AppOptions
<!DOCTYPE html>
@{
    string site = AppOptions.Value.ApplicationName;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/css/categories.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />"
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200&display=swap" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" id="page-top">
            <div class="container">
                <a class="navbar-brand navbar-brand-mod d-flex flex-wrap" asp-area="" asp-controller="Home" asp-action="Index">
                    <div><img src="/Images/Site/RCC00160.png" alt=@site style="width:250px; height:76px" /></div>
                    <div style="font-size:48px">@site</div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            @*<a class="nav-link no-show" asp-area="" asp-controller="Admin" asp-action="Admin">
                                <i class="fa fa-cog"></i>
                            </a>*@
                            <a class="nav-link no-show" href="@Url.Action("Admin", "Admin")" target="_blank">
                                <i class="fa fa-cog"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @*<div class="d-flex justify-content-center">
            <div class="spinner-border spinner-grow-lg text-primary" id="loader"></div>
        </div>*@
    </header>
    <div class="container" style="overflow:hidden">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="to-top">
        <a class="btn btn-outline-primary button-mod3 mb-5" href="#page-top">
            <i class="fa fa-arrow-up"></i>
        </a>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - @site - <a class="link-no-decoration" asp-area=" " asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
