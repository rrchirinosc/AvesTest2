
@{
    ViewData["Title"] = "Admin";
}

@model AdminViewModel

    <div class="container border-divider col-lg-8">
        <form asp-action="AddBird" asp-controller="Admin">
            <h3 class="description-text">Add bird</h3>
            <div class="form-group col-lg-8 p-0">
                <input type="text" class="form-control" id="name" name="Name" placeholder="Bird name">
            </div>
            <div class="form-group col-lg-8 p-0">
                <input type="text" class="form-control" id="sciName" name="SciName" placeholder="Scientific Name">
            </div>
            <div class="form-group col-lg-4 p-0">
                <select id="familyId" class="form-control" name="FamilyId">
                    <option value=0 selected>FamilyId...</option>
                    @foreach (var family in Model.Families)
                    {
                        <option value=@family.Id>@family.SciName</option>
                    }

                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="margin: 30px 10px">Add Bird</button>
        </form>
    </div>
    <div class="container border-divider col-lg-8">
        <form asp-action="AddImage" asp-controller="Admin">
            <h3 class="description-text">Add image</h3>
            <div class="form-group col-lg-4 p-0">
                <select id="birdId" class="form-control" name="BirdId">
                    <option value=0 selected>Bird ID...</option>
                    @foreach (var bird in Model.Birds)
                    {
                        <option value=@bird.Id>@bird.Name (@bird.Id)</option>
                    }
                </select>
            </div>
            <div class="form-group col-lg-4 p-0">
                <input type="text" class="form-control" id="fileName" name="FileName" placeholder="File Name (no extension)">
            </div>
            <div class="form-group col-lg-8 p-0">
                <input type="text" class="form-control" id="location" name="Location" placeholder="Location">
            </div>
            <div class="form-group col-lg-4 p-0">
                <input type="date" class="form-control" id="date" name="Date" placeholder="Date">
            </div>
            <div class="form-group col-lg-4 p-0">
                <select id="country" class="form-control" name="Country">
                    <option value="" selected>Country...</option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value=@country.Key>@country.Value</option>
                    }
                </select>
            </div>
            <div class="form-group col-lg-8 p-0">
                <input type="text" class="form-control" id="coordinates" name="Coordinate" placeholder="Coordinates: Longitud,Latitud...">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="keyImage" name="IsActive" value="true">
                <label class="text-white" for="keyImage">Key Image</label>
            </div>
            <button type="submit" class="btn btn-primary" style="margin: 30px 10px">Add Image</button>
        </form>
    </div>
